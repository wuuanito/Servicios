# Variables de entorno para el proyecto NaturePharma
# Copia este archivo a .env y configura los valores apropiados

# Base de datos MySQL
DB_HOST=mysql
DB_PORT=3306
DB_USER=naturepharma
DB_PASSWORD=root
MYSQL_ROOT_PASSWORD=root_password

# Bases de datos específicas
AUTH_DB_NAME=auth_service_db
CALENDAR_DB_NAME=calendar_service_db
LABORATORIO_DB_NAME=laboratorio_db
SOLICITUDES_DB_NAME=sistema_solicitudes

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRES_IN=24h

# Email Configuration (para calendar-service)
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-gmail-app-password

# URLs de servicios
FRONTEND_URL=http://localhost:3000
AUTH_SERVICE_URL=http://localhost:4001
CALENDAR_SERVICE_URL=http://localhost:3003
LABORATORIO_SERVICE_URL=http://localhost:3004
SOLICITUDES_SERVICE_URL=http://localhost:3001

# Configuración de entorno
NODE_ENV=production

# Puertos de servicios
AUTH_SERVICE_PORT=4001
CALENDAR_SERVICE_PORT=3003
LABORATORIO_SERVICE_PORT=3004
SOLICITUDES_SERVICE_PORT=3001
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443
PHPMYADMIN_PORT=8080